<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta http-equiv="X-UA-Compatible" content="IE=edge">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title><%= title %> | <%= author %></title>
  <meta name="description" content="<%= desc %>">
  <meta name="author" content="<%= author %>">
  <link href="/assets?i=main.css" rel="stylesheet">
  <link href="/assets?i=icon.jpg" rel="icon">
  <script src="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.1.1/js/all.min.js"></script>
</head>
<body>
  <header>
    <div class="respon">
      <a onclick="OpenNav()"><i class="fa-solid fa-bars icons-bars"></i><%= author %></a>
    </div>
  </header>
  <main class="respon">
    <nav id="navbar">
    <% navbar.forEach(aid => { %>
      <a href="<%= aid.replace(".md", "") %>"><i class="fa-brands fa-markdown icons"></i><%= aid.replace(aid.charAt(0), aid.charAt(0).toUpperCase()).replace(".md", "") %></a>
    <% })%>
    </nav>
    <article>
      <%- htmlMarkdown %>
    </article>
  </main>
  <footer></footer>
  <script src="https://cdnjs.cloudflare.com/ajax/libs/highlight.js/11.5.1/highlight.min.js"></script>
  <script>
    document.querySelectorAll('code').forEach(el => {
      hljs.highlightElement(el);
    });
    function OpenNav() {
      const navbarP = document.getElementById("navbar")
      if(navbarP.style.marginLeft === "-500px" ) {
        navbarP.style.marginLeft = "0px"
      } else {
        navbarP.style.marginLeft = "-500px"
      }
    }
  </script>
</body>
</html>